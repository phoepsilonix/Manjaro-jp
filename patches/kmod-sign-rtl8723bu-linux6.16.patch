@@ -45,6 +45,9 @@ build() {
     # any kernel but the current.
     make clean
     make -C /usr/lib/modules/${_kernver}/build M="$srcdir/${_module}" modules
+    SIG_HASH=$(grep -o "CONFIG_MODULE_SIG_HASH.*" /usr/lib/modules/$_kernver/build/include/config/auto.conf)
